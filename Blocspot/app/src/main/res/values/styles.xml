<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->

        <item name="colorPrimaryDark">@color/material_red_dark</item>
        <item name="colorPrimary">@color/material_red_primary</item>
        <item name="colorAccent">@color/black_87</item>
        <item name="colorControlActivated">@color/black_60</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:textColorHint">@color/white_60</item>

        <!-- For Popup Window-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>

    <!-- SearchView Icon Color in Toolbar. This only applies to NoActionBar parent usage-->

    <style name ="SearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="searchIcon">@drawable/menu_search_selector</item>
        <item name="closeIcon">@drawable/sview_close_selector</item>
    </style>

    <!-- SearchView Cursor Color Change -->

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <!-- AlertDialog Colors -->

    <style name="MaterialAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name = "colorAccent">@android:color/holo_red_dark</item>
        <item name = "android:textColorPrimary">@android:color/black</item>

    </style>

    <style name="DialogBottomButton">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/click_effect</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>

    </style>

    <style name="MaterialButton">

        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:text">+</item>
        <item name="android:textColor">@color/black_87</item>

    </style>

    <!-- Point of Interest Styles -->

    <style name="POI_name">

        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>

    </style>

    <style name="POI_description">

        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">2</item>

    </style>

    <style name="POI_distance">

        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>

    </style>

</resources>
