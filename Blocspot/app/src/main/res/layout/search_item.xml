<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/iv_place_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@color/red_50"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/tv_search_result_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="The Hot Dog Place"
            android:textColor="@android:color/black"
            android:layout_alignTop="@+id/iv_place_logo"
            android:layout_toRightOf="@+id/iv_place_logo"
            android:layout_toEndOf="@+id/iv_place_logo"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_search_result_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="123 Fake St"
            android:textColor="@android:color/black"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv_place_logo"
            android:layout_toEndOf="@+id/iv_place_logo"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingRight="8dp"/>

        <TextView
            android:id="@+id/divider1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="|"
            android:layout_toRightOf="@+id/tv_search_result_address"
            android:layout_alignParentBottom="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:paddingRight="8dp"/>

        <TextView
            android:id="@+id/tv_search_result_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Los Angeles"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/divider1"
            android:layout_toEndOf="@+id/iv_place_logo"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:paddingRight="8dp"/>

        <TextView
            android:id="@+id/divider2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="|"
            android:layout_toRightOf="@+id/tv_search_result_city"
            android:layout_alignParentBottom="true"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:paddingRight="8dp"/>

        <TextView
            android:id="@+id/tv_search_result_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="CA"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/divider2"
            android:layout_toEndOf="@+id/iv_place_logo"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:paddingRight="8dp"/>

        <TextView
            android:id="@+id/divider3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="|"
            android:layout_toRightOf="@+id/tv_search_result_state"
            android:layout_alignParentBottom="true"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:paddingRight="8dp"/>

        <TextView
            android:id="@+id/tv_search_result_zipcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="90027"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/divider3"
            android:layout_toEndOf="@+id/iv_place_logo"
            android:paddingRight="8dp"/>

        <ImageView
            android:id="@+id/iv_search_result_rating"
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/black_12"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_26"/>

</LinearLayout>