<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_assign_category"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_item_height"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="@drawable/click_effect">

        <TextView
            android:id="@+id/tv_category_color"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:background="@drawable/circle_shape"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurants"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLength="16"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_category_color"
            android:layout_toEndOf="@+id/tv_category_color" />

    </RelativeLayout>

    <View
        android:id="@+id/v_assign_category_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_12"/>

</LinearLayout>